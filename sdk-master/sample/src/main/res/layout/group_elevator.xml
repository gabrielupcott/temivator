<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:visibility="visible"
    tools:ignore="HardcodedText">

    <Button
        android:id="@+id/btnTest1"
        style="@style/ButtonCommon"
        android:text="Test 1" />

    <Button
        android:id="@+id/btnTestVoice"
        style="@style/ButtonCommon"
        android:text="Elevator Voice Response" />

    <Button
        android:id="@+id/btnListMaps"
        style="@style/ButtonCommon"
        android:text="List Maps" />

    <Button
        android:id="@+id/btnLoadMapNoDialog"
        style="@style/ButtonCommon"
        android:text="Load map by id, no repose" />

    <Button
        android:id="@+id/btnLoadMapNoDialog2"
        style="@style/ButtonCommon"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:text="Load map by id, with repose" />

    <Button
        android:id="@+id/btnChangeSpeed"
        style="@style/ButtonCommon"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:text="Change Speed" />

    <Button
        android:id="@+id/btnChangeSpeedHigh"
        style="@style/ButtonCommon"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:text="Change Speed: High" />

    <Button
        android:id="@+id/btnWillsTestButton"
        style="@style/ButtonCommon"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:text="Will's Test Button" />

    <Button
        android:id="@+id/btnImageProcessing"
        style="@style/ButtonCommon"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:text="Image Processing" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.robotemi.sdk.sample.GraphicOverlay
            android:id="@+id/graphic_overlay"
            android:layout_width="225dp"
            android:layout_height="276dp"
            android:layout_marginStart="527dp"
            android:layout_marginEnd="528dp"
            android:layout_marginBottom="44dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.robotemi.sdk.sample.CameraSourcePreview
            android:id="@+id/preview_view"
            android:layout_width="225dp"
            android:layout_height="276dp"
            android:layout_marginStart="527dp"
            android:layout_marginEnd="528dp"
            android:layout_marginBottom="44dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/graphic_overlay" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>